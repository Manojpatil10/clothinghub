    </header>
    <main>
      <div class="content">
        <div class="container">
          <div class="cart-div">
            <div class="row">
              <div class="col-12 mb-4 col-xl-8 mb-xl-0">
                <div class="product-div">
                  <table>
                    <thead>
                      <tr>
                        <th>PRODUCT</th>
                        <th class="text-center">PRICE</th>
                        <th class="text-center">QUANTITY</th>
                        <th class="text-center">SUBTOTAL</th>
                        <th></th>
                      </tr>
                    </thead>
                    <tbody>
                      <% cartData.forEach((item, index)=> { %>
                        <tr>
                          <td class="img-td">
                            <div class="product-desc d-flex alifn-items-center">
                              <div class="img-div">
                                <img src="<%= item.productImage %>" alt="Image" class="product-img">
                              </div>
                              <div class="desc-div d-flex align-items-center">
                                <div>
                                  <strong>
                                    <%= item.productName %>
                                  </strong>
                                  <br>
                                  <span class="mb-0">
                                    <strong>Category :</strong>
                                    <%= item.category %>
                                  </span>
                                  <br>
                                  <span class="mb-0">
                                    <strong>Size :</strong>
                                    <%= item.size %>
                                  </span>
                                </div>
                              </div>
                            </div>
                          </td>
                          <td class="text-center ps-3">
                            ₹<input type="text" class="item-price" id="price-<%= index %>" value="<%= item.price %>"
                              readonly>
                          </td>
                          <td class="text-center">
                            <div class="d-flex justify-content-center">
                              <div class="d-flex align-items-center justify-content-center cart-control">
                                <span class="minus-btn" data-index="<%= index %>">-</span>
                                <input type="text" id="quantity-<%= index %>" class="quantity-selector"
                                  value="<%= item.quantity %>" readonly>
                                <span class="add-btn" data-index="<%= index %>">+</span>
                              </div>
                            </div>
                          </td>
                          <td class="text-center">
                            ₹<input type="text" class="item-subtotal" id="subtotal-<%= index %>"
                              value="<%= item.price * item.quantity %>" readonly>
                          </td>
                          <td class="text-center">
                            <a href="/deleteCartProduct?id=<%= item._id %>" data-index="<%= index %>"
                              class="cancel-icon">
                              <i class="fa-solid fa-trash-can"></i>
                            </a>
                          </td>
                        </tr>
                        <% }); %>
                    </tbody>

                  </table>
                </div>

                <div class="row justify-content-between align-items-center">
                  <div class="col-12 mb-3 col-lg-6 mb-lg-0">
                    <div class="coupon-section d-flex justify-content-between">
                      <input type="text" placeholder="Coupon Code">
                      <button>APPLY COUPON</button>
                    </div>
                  </div>
                  <div class="col-12 col-lg-6">
                    <div class="update-section">
                      <a href="/updateCartProduct" class="update-btn">UPDATE CART</a>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-12 col-xl-4">
                <div class="cart-totals">
                  <div class="cart-total-table">
                    <h3>CART TOTALS</h3>
                    <table class="w-100">
                      <thead>
                        <tr>
                          <th></th>
                          <th class="col-heading text-end">Tax</th>
                          <th class="col-heading text-end">Total</th>
                        </tr>
                      </thead>
                      <tbody>
                        <tr class="table-tr">
                          <td class="row-heading">Shipping</td>
                          <td class="text-end">2%</td>
                          <td class="text-end" id="shippingCharge"></td>
                        </tr>
                        <tr class="table-tr">
                          <td class="row-heading">Product <span class="qty-span">x<%=productCount%></span></td>
                          <td></td>
                          <td class="text-end" id="productVal"></td>
                        </tr>
                        <tr class="table-tr">
                          <td class="row-heading">GST</td>
                          <td class="text-end">18%</td>
                          <td class="text-end" id="gstCharge"></td>
                        </tr>
                        <tr>
                          <td class="row-heading">TOTAL AMOUNT</td>
                          <td></td>
                          <td class="text-end" id="totalAmt"></td>
                        </tr>
                      </tbody>
                    </table>
                  </div>
                  <a href="/checkoutPage" class="button">PROCEED TO CHECKOUT</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
    <footer>
