        </div>
      </div>
    </footer>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script>

      document.addEventListener('DOMContentLoaded', function () {
        // Add event listeners to the quantity buttons (increment, decrement)
        document.querySelectorAll('.minus-btn, .add-btn').forEach(function (button) {
          button.addEventListener('click', function () {
            let index = this.getAttribute('data-index');
            let change = this.classList.contains('minus-btn') ? -1 : 1; // -1 for decrement, 1 for increment
            updateSubtotal(index, change);
          });
        });

        // Add event listeners for quantity inputs
        document.querySelectorAll('.quantity-selector').forEach(function (input) {
          input.addEventListener('change', function () {
            let index = this.getAttribute('data-index');
            updateSubtotal(index, 0); // No change to quantity, just update based on input value
          });
        });

        // Initial cart total calculation
        calculateCartTotals();
      });

      // Global array to store updated cart data
      let updatedCartData = [];

      // Function to update subtotal when quantity changes
      function updateSubtotal(index, change) {
        let price = parseFloat(document.getElementById(`price-${index}`).value); // Get price
        let quantity = parseInt(document.getElementById(`quantity-${index}`).value); // Get quantity

        // Adjust quantity based on increment or decrement
        if (change !== 0) {
          quantity += change;
          if (quantity < 1) quantity = 1; // Ensure quantity is at least 1
        }

        // Update the quantity input field
        document.getElementById(`quantity-${index}`).value = quantity;

        // Calculate subtotal
        let subtotal = price * quantity;

        // Update the subtotal input field
        document.getElementById(`subtotal-${index}`).value = subtotal;

        // Get product ID from the delete button link
        let productId = document.querySelector(`a[data-index="${index}"]`).getAttribute('href').split('=')[1];

        // Update the global array
        let existingProduct = updatedCartData.find(item => item.id === productId);
        if (existingProduct) {
          existingProduct.quantity = quantity;
          existingProduct.subtotal = subtotal;
        } else {
          updatedCartData.push({
            id: productId,
            quantity: quantity,
            subtotal: subtotal
          });
        }

        // Recalculate cart totals
        calculateCartTotals();
      }

      // Function to calculate cart totals
      function calculateCartTotals() {
        let totalSubtotal = 0;

        // Iterate over all item subtotals and calculate the total
        document.querySelectorAll('.item-subtotal').forEach((subtotalInput) => {
          totalSubtotal += parseFloat(subtotalInput.value) || 0;
        });

        // Calculate shipping, GST, and total amount
        let shippingCharge = totalSubtotal * 0.02;
        let gstCharge = totalSubtotal * 0.18;
        let totalAmt = totalSubtotal + shippingCharge + gstCharge;

        // Update the totals in the UI
        document.getElementById('shippingCharge').innerText = `${shippingCharge.toFixed(2)}`;
        document.getElementById('gstCharge').innerText = `${gstCharge.toFixed(2)}`;
        document.getElementById('productVal').innerText = `${totalSubtotal.toFixed(2)}`;
        document.getElementById('totalAmt').innerText = `₹${totalAmt.toFixed(2)}`;
      }

      // Event listener for the update button
      document.addEventListener('DOMContentLoaded', function () {
        const updateButton = document.querySelector('.update-btn');

        updateButton.addEventListener('click', function (event) {
          // Prevent the default navigation
          event.preventDefault();

          if (updatedCartData.length === 0) {
            alert("No changes to update!");
            return;
          }

          // Convert array to query parameter
          let queryString = encodeURIComponent(JSON.stringify(updatedCartData));

          // Update the href dynamically
          let path = `/updateCartProduct?cartData=${queryString}`;
          console.log("Redirecting to:", path);

          // Redirect to the new URL
          window.location.href = path;
        });
      });



    </script>
</body>

</html>