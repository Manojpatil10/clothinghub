<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Explore More - Products</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/indexPagesCss/pagination.css">
</head>

<body>
  <div class="wrapper">
    <header>
      <div class="header d-flex align-items-center">
        <div class="container">
          <h1>Explore Men's Collection</h1>
        </div>
      </div>
    </header>
    <main>
      <div class="product-section">
        <div class="container">
          <div class="row">
            <% products.forEach(product => { %>
              <div class="col-md-4 col-sm-6 mb-4">
                <div class="product-card">
                  <div class="product-image">
                    <img src="<%= product.productImage %>" alt="<%= product.productName %>">
                  </div>
                  <div class="product-details">
                    <p class="product-brand"><%= product.productBrand %></p>
                    <h4 class="product-name"><%= product.productName %></h4>
                    <p class="product-price">
                      $<%= product.price %>
                      <% if (product.discount) { %>
                        <span class="discount">(-<%= product.discount %>% OFF)</span>
                      <% } %>
                    </p>
                    <p class="product-category">Category: <%= product.categories.join(', ') %></p>
                    <p class="product-description"><%= product.description %></p>
                    <a href="#" class="btn btn-primary add-cart-btn">Add to Cart</a>
                  </div>
                </div>
              </div>
            <% }); %>
          </div>

          <!-- Pagination -->
          <nav>
            <ul class="pagination justify-content-center">
              <% if (currentPage > 1) { %>
                <li class="page-item">
                  <a class="page-link" href="?page=<%= currentPage - 1 %>">Previous</a>
                </li>
              <% } %>

              <% for (let i = Math.max(1, currentPage - 1); i <= Math.min(totalPages, currentPage + 1); i++) { %>
                <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                  <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                </li>
              <% } %>

              <% if (currentPage < totalPages) { %>
                <li class="page-item">
                  <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
                </li>
              <% } %>
            </ul>
          </nav>
        </div>
      </div>
    </main>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
</body>

</html>
